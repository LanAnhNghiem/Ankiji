<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jishin.ankiji.about_us.AboutUsActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/colorPrimaryDark"
        app:titleTextColor="@android:color/white"
        android:theme="@style/ToolBarTheme.ToolBarStyle"
        app:layout_constraintTop_toTopOf="parent">
    </android.support.v7.widget.Toolbar>

    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="12dp">

        <android.support.constraint.Guideline
            android:id="@+id/guideline_vertical"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5"/>

        <android.support.constraint.Guideline
            android:id="@+id/guideline_horizontal"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.5"/>


        <android.support.v7.widget.CardView
            android:id="@+id/card_la"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/guideline_horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="@id/guideline_vertical"
            card_view:cardMaxElevation="3dp"
            app:cardElevation="2dp"
            card_view:cardUseCompatPadding="true"
            app:cardPreventCornerOverlap="false"
            android:layout_margin="3dp">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.constraint.Guideline
                    android:id="@+id/guideline_la"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.7"/>

                <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/img_la"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_margin="30dp"
                    android:padding="0dp"
                    android:src="@drawable/lan_anh"
                    app:civ_border_color="@color/image_boder_color"
                    app:civ_border_width="2dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="@id/guideline_la"/>

                <TextView
                    android:id="@+id/pos_la"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/leader"
                    android:textColor="@android:color/black"
                    app:layout_constraintTop_toBottomOf="@id/img_la"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:textAlignment="center"
                    android:layout_marginStart="7dp"
                    android:layout_marginEnd="7dp"
                    android:textSize="13sp"/>


                <TextView
                    android:id="@+id/lananh"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="LanAnh"
                    android:textColor="@android:color/black"
                    app:layout_constraintTop_toBottomOf="@id/pos_la"
                    app:layout_constraintBottom_toTopOf="@id/guideline_la"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:textAlignment="center"
                    android:layout_marginStart="7dp"
                    android:layout_marginEnd="7dp"
                    android:textSize="15sp"
                    android:layout_marginTop="5dp"/>


                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"
                    app:layout_constraintTop_toBottomOf="@id/guideline_la"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginTop="15dp"/>

                <TextView
                    android:id="@+id/school_la"
                    android:text="@string/uit"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/guideline_la"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:textSize="14sp"/>


            </android.support.constraint.ConstraintLayout>

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:id="@+id/card_duc"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/guideline_horizontal"
            app:layout_constraintStart_toStartOf="@id/guideline_vertical"
            app:layout_constraintEnd_toEndOf="parent"
            card_view:cardMaxElevation="3dp"
            app:cardElevation="2dp"
            card_view:cardUseCompatPadding="true"
            app:cardPreventCornerOverlap="false"
            android:layout_margin="3dp">
            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.constraint.Guideline
                    android:id="@+id/guideline_duc"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.7"/>

                <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/img_duc"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_margin="30dp"
                    android:padding="0dp"
                    android:src="@drawable/huu_duc"
                    app:civ_border_color="@color/image_boder_color"
                    app:civ_border_width="2dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="@id/guideline_duc"/>

                <TextView
                    android:id="@+id/pos_duc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/deverloper"
                    android:textColor="@android:color/black"
                    app:layout_constraintTop_toBottomOf="@id/img_duc"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:textAlignment="center"
                    android:layout_marginStart="7dp"
                    android:layout_marginEnd="7dp"
                    android:textSize="13sp"/>

                <TextView
                    android:id="@+id/duc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="DucNguyen"
                    android:textColor="@android:color/black"
                    app:layout_constraintTop_toBottomOf="@id/pos_duc"
                    app:layout_constraintBottom_toTopOf="@id/guideline_duc"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:textAlignment="center"
                    android:layout_marginStart="7dp"
                    android:layout_marginEnd="7dp"
                    android:textSize="15sp"
                    android:layout_marginTop="5dp"/>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"
                    app:layout_constraintTop_toBottomOf="@id/guideline_duc"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginTop="15dp"/>



                <TextView
                    android:id="@+id/school_duc"
                    android:text="@string/ptit"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/guideline_duc"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginStart="7dp"
                    android:layout_marginEnd="7dp"
                    android:textSize="14sp"/>


            </android.support.constraint.ConstraintLayout>


        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:id="@+id/card_hoai"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/guideline_horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="@id/guideline_vertical"
            card_view:cardMaxElevation="3dp"
            app:cardElevation="2dp"
            card_view:cardUseCompatPadding="true"
            app:cardPreventCornerOverlap="false"
            android:layout_margin="3dp">
            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.constraint.Guideline
                    android:id="@+id/guideline_th"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.7"/>

                <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/img_th"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_margin="30dp"
                    android:padding="0dp"
                    android:src="@drawable/thanh_hoai"
                    app:civ_border_color="@color/image_boder_color"
                    app:civ_border_width="2dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="@id/guideline_th"/>

                <TextView
                    android:id="@+id/pos_th"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/deverloper"
                    android:textColor="@android:color/black"
                    app:layout_constraintTop_toBottomOf="@id/img_th"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:textAlignment="center"
                    android:layout_marginStart="7dp"
                    android:layout_marginEnd="7dp"
                    android:textSize="13sp"/>

                <TextView
                    android:id="@+id/hoai"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ThanhHoai"
                    android:textColor="@android:color/black"
                    app:layout_constraintTop_toBottomOf="@id/pos_th"
                    app:layout_constraintBottom_toTopOf="@id/guideline_th"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:textAlignment="center"
                    android:layout_marginStart="7dp"
                    android:layout_marginEnd="7dp"
                    android:textSize="15sp"
                    android:layout_marginTop="5dp"/>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"
                    app:layout_constraintTop_toBottomOf="@id/guideline_th"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginTop="15dp"/>


                <TextView
                    android:id="@+id/school_th"
                    android:text="@string/ptit"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/guideline_th"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginStart="7dp"
                    android:layout_marginEnd="7dp"
                    android:textSize="14sp"/>


            </android.support.constraint.ConstraintLayout>
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:id="@+id/card_trung"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/guideline_horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/guideline_vertical"
            app:layout_constraintEnd_toEndOf="parent"
            card_view:cardMaxElevation="3dp"
            app:cardElevation="2dp"
            card_view:cardUseCompatPadding="true"
            app:cardPreventCornerOverlap="false"
            android:layout_margin="3dp">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.constraint.Guideline
                    android:id="@+id/guideline_ht"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.7"/>

                <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/img_ht"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_margin="30dp"
                    android:padding="0dp"
                    android:src="@drawable/huu_trung"
                    app:civ_border_color="@color/image_boder_color"
                    app:civ_border_width="2dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="@id/guideline_ht"/>

                <TextView
                    android:id="@+id/pos_ht"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/deverloper"
                    android:textColor="@android:color/black"
                    app:layout_constraintTop_toBottomOf="@id/img_ht"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:textAlignment="center"
                    android:layout_marginStart="7dp"
                    android:layout_marginEnd="7dp"
                    android:textSize="13sp"/>

                <TextView
                    android:id="@+id/trung"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TrungNguyeen"
                    android:textColor="@android:color/black"
                    app:layout_constraintTop_toBottomOf="@id/pos_ht"
                    app:layout_constraintBottom_toTopOf="@id/guideline_ht"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:textAlignment="center"
                    android:layout_marginStart="7dp"
                    android:layout_marginEnd="7dp"
                    android:textSize="15sp"
                    android:layout_marginTop="5dp"/>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"
                    app:layout_constraintTop_toBottomOf="@id/guideline_ht"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginTop="15dp"/>


                <TextView
                    android:id="@+id/school_ht"
                    android:text="@string/ptit"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/guideline_ht"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginStart="7dp"
                    android:layout_marginEnd="7dp"
                    android:textSize="14sp"/>

            </android.support.constraint.ConstraintLayout>

        </android.support.v7.widget.CardView>

    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>
