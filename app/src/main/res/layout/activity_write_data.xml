<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context="com.jishin.ankiji.WriteData">

    <TextView
        android:id="@+id/txtKanji"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        tools:text="KANJI"
    />

    <TextView
        android:id="@+id/txtAmHan"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        tools:text="AM HAN"
        app:layout_constraintTop_toBottomOf="@id/txtKanji" />

    <TextView
        android:id="@+id/txtTuVung"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        tools:text="Tu Vung"
        app:layout_constraintTop_toBottomOf="@id/txtAmHan" />


    <Button
        android:id="@+id/btnSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SAVE"
        android:layout_marginTop="82dp"
        app:layout_constraintTop_toBottomOf="@+id/txtTuVung"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

</android.support.constraint.ConstraintLayout>
